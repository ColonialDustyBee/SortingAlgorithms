//I referenced geeksforgeeks for help in creating this program because I was struggling when trying to create a working selection sort
#include <bits/stdc++.h>
using namespace std;
 

void swap(int *xp, int *yp)
{
    int temp = *xp;
    *xp = *yp;
    *yp = temp;
}
 
void selectionSort(int arr[], int n)
{
    int i, j, min_id;
 

    for (i = 0; i < n-1; i++)
    {
       

        min_id = i;
        for (j = i+1; j < n; j++)
        if (arr[j] < arr[min_id])
            min_id = j;
 

        if(min_id!=i)
            swap(&arr[min_id], &arr[i]);
    }
}
 
void printArray(int arr[], int size)
{
    int i;
    for (i=0; i < size; i++)
        cout << arr[i] << " ";
    cout << endl;
}
 
int main()
{
    int arr[] = {50, 40, 30, 20, 10};
    int n = sizeof(arr)/sizeof(arr[0]);
    selectionSort(arr, n);
    cout << "Sorted output: ";
    printArray(arr, n);
    return 0;
}
